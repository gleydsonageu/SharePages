<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.projetoapp.sharepages.gui.MenuPrincipal">


    <Button
        android:id="@+id/botaoEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_editar_perfil"
        android:onClick="editarPefil"/>

    <Button
        android:id="@+id/botaoCadastrarLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cadastrar_livro"
        android:layout_below="@+id/botaoEditarPerfil"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/botaoColecaoDisponivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/colecao_disponivel"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/botaoCadastrarLivro"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/botaoMinhaPrateleira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_minha_prateleira"
        android:layout_below="@+id/botaoColecaoDisponivel"
        android:layout_alignParentStart="true" />
</RelativeLayout>